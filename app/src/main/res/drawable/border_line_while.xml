<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="@null" />
            <stroke
                android:width="1dp"
                android:color="#ffffff" />
            <corners
                android:topLeftRadius="10dip"
                android:topRightRadius="10dip"
                android:bottomRightRadius="10dip"
                android:bottomLeftRadius="10dip" />
            <padding
                android:left="6dp"
                android:top="6dp"
                android:right="6dp"
                android:bottom="6dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="@null" />
            <stroke
                android:width="1dp"
                android:color="#ffffff" />
            <corners
                android:topLeftRadius="10dip"
                android:topRightRadius="10dip"
                android:bottomRightRadius="10dip"
                android:bottomLeftRadius="10dip" />
            <padding
                android:left="6dp"
                android:top="6dp"
                android:right="6dp"
                android:bottom="6dp" />
        </shape>
    </item>
</selector>